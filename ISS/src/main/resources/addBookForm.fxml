<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddBookController">
    <Label text="ISBN" />
    <TextField fx:id="textISBN" />
    <Label text="Author" />
    <TextField fx:id="textAuthor" />
    <Label text="Title" />
    <TextField fx:id="textTitle" />
    <Label text="Publication Year" />
    <TextField fx:id="textPublicationYear" />
    <Label text="Genre" />
    <TextField fx:id="textGenre" />
    <Button onAction="#handleAddBook" text="Add Book" />
</VBox>
